# EditorConfig helps maintain consistent coding styles across different editors
# See https://editorconfig.org

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript, TypeScript, React, JSX
[*.{js,mjs,cjs,jsx,ts,tsx}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# CSS, SCSS, PostCSS
[*.{css,scss,postcss}]
indent_style = space
indent_size = 2

# HTML
[*.html]
indent_style = space
indent_size = 2
